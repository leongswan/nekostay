<div style="max-width: 600px; margin: 40px auto; padding: 0 20px;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <h1 style="color: #5A4A42; margin: 0;">🐾 うちの子リスト</h1>
    <%= link_to "+ 追加する", new_pet_path, class: "btn", style: "background: #D98E63; color: white; padding: 10px 20px; border-radius: 20px; text-decoration: none;" %>
  </div>

  <% if @pets.any? %>
    <div style="display: grid; gap: 15px;">
      <% @pets.each do |pet| %>
        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); display: flex; align-items: center; gap: 15px;">
          <div style="width: 50px; height: 50px; background: #eee; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24px;">
            🐱
          </div>
          <div>
            <h3 style="margin: 0; color: #333;"><%= pet.name %></h3>
            <span style="font-size: 0.8rem; color: #999;">登録日: <%= pet.created_at.strftime('%Y/%m/%d') %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div style="text-align: center; color: #999; padding: 40px;">
      まだ登録されていません
    </div>
  <% end %>

  <div style="margin-top: 30px; text-align: center;">
    <%= link_to "トップに戻る", root_path, style: "color: #999; text-decoration: none;" %>
  </div>
</div>