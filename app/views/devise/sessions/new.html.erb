<h2><%= t('.sign_in') %></h2> <%# 修正: tヘルパーを使う %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('devise.shared.email') %><br /> <%# 修正 %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.shared.password') %><br /> <%# 修正 %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('.remember_me') %> <%# 修正 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn btn--primary" %> <%# 修正 & CSSクラスを付与 %>
  </div>
<% end %>

<%= render "devise/shared/links" %>