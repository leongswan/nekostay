<!-- app/views/checkins/show.html.erb -->
<h1><%= t(".title") %> <span class="meta">(Stay #<%= @stay.id %>)</span></h1>

<p class="meta">
  <%= t(".period") %>: <%= @stay.start_on %> 〜 <%= @stay.end_on %>
</p>

<div class="stack stack--end" style="margin: 8px 0 16px;">
  <%= link_to t(".back"), stay_checkins_path(@stay), class: "btn" %>
  <%= link_to t(".edit"), edit_stay_checkin_path(@stay, @checkin),
        data: { turbo_frame: "modal" }, class: "btn btn--primary" %>
  <%= button_to t(".destroy"), stay_checkin_path(@stay, @checkin),
        method: :delete,
        form: { data: { turbo_confirm: t(".confirm_destroy") }, class: "inline" },
        class: "btn btn--danger" %>
</div>

<div class="card" style="margin-bottom:16px;">
  <dl class="def">
    <dt><%= t(".checked_at") %></dt>
    <dd><strong><%= dt_label(@checkin.checked_at) %></strong></dd>

    <dt><%= t(".weight") %></dt>
    <dd><%= weight_label(@checkin.weight) %></dd>

    <dt><%= t(".memo") %></dt>
    <dd><%= simple_format(@checkin.memo.presence || "—") %></dd>
  </dl>
</div>

<div class="card">
  <h3 style="margin-top:0;"><%= t(".details") %></h3>
  <dl class="def">
    <dt>Meal</dt>
    <dd><%= meal_label(@checkin.meal) %></dd>

    <dt>Litter</dt>
    <dd><%= litter_label(@checkin.litter) %></dd>

    <dt>Meds</dt>
    <dd><%= meds_badges(@checkin) %></dd>
  </dl>
</div>

<div class="stack" style="margin-top:16px;">
  <%= link_to t(".back"), stay_checkins_path(@stay), class: "btn" %>
  <%= link_to t(".edit"), edit_stay_checkin_path(@stay, @checkin),
        data: { turbo_frame: "modal" }, class: "btn btn--primary" %>
  <%= button_to t(".destroy"), stay_checkin_path(@stay, @checkin),
        method: :delete,
        form: { data: { turbo_confirm: t(".confirm_destroy") }, class: "inline" },
        class: "btn btn--danger" %>
</div>

