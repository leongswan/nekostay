<div style="max-width: 600px; margin: 40px auto; padding: 20px;">
  
  <div style="margin-bottom: 20px;">
    <%= link_to root_path, style: "text-decoration: none; color: #999; display: inline-flex; align-items: center; gap: 5px;" do %>
      <i class="fa-solid fa-arrow-left"></i> ダッシュボードに戻る
    <% end %>
  </div>

  <div style="background: white; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.05); padding: 30px; border: 1px solid #eee;">
    
    <h2 style="color: #5A4A42; margin-top: 0; margin-bottom: 25px; text-align: center;">
      <i class="fa-solid fa-calendar-plus" style="color: #D98E63;"></i> 新規予約の作成
    </h2>

    <%= render 'form', stay: @stay %>

  </div>
</div>