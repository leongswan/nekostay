<div style="max-width: 600px; margin: 40px auto; padding: 20px; background: white; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
  <h2 style="text-align: center; color: #5A4A42; margin-bottom: 25px;">予約内容の編集 ✏️</h2>

  <%= form_with(model: @stay, local: true) do |f| %>
    
    <% if @stay.errors.any? %>
      <div style="background: #ffe6e6; color: #d63031; padding: 10px; border-radius: 6px; margin-bottom: 20px; font-size: 0.9rem;">
        入力内容を確認してください
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= f.label :pet_id, "ペット", style: "display: block; font-weight: bold; margin-bottom: 5px; color: #555;" %>
      <%= f.collection_select :pet_id, @pets, :id, :name, { prompt: "選択してください" }, { style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;" } %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :place, "お世話する場所", style: "display: block; font-weight: bold; margin-bottom: 5px; color: #555;" %>
      <%= f.select :place, [["飼い主の自宅", "owner_home"], ["シッターの自宅", "sitter_home"]], {}, { style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;" } %>
    </div>

    <div style="display: flex; gap: 15px; margin-bottom: 20px;">
      <div style="flex: 1;">
        <%= f.label :start_on, "開始日", style: "display: block; font-weight: bold; margin-bottom: 5px; color: #555;" %>
        <%= f.date_field :start_on, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;" %>
      </div>
      <div style="flex: 1;">
        <%= f.label :end_on, "終了日", style: "display: block; font-weight: bold; margin-bottom: 5px; color: #555;" %>
        <%= f.date_field :end_on, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;" %>
      </div>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :notes, "メモ (シッターへの引継ぎ事項など)", style: "display: block; font-weight: bold; margin-bottom: 5px; color: #555;" %>
      <%= f.text_area :notes, rows: 4, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;" %>
    </div>

    <%= f.submit "更新する", style: "width: 100%; background: #D98E63; color: white; border: none; padding: 12px; border-radius: 6px; font-size: 1rem; cursor: pointer; font-weight: bold;" %>
    
  <% end %>

  <div style="text-align: center; margin-top: 20px;">
    <%= link_to "キャンセル", stay_path(@stay), style: "color: #999; text-decoration: none; font-size: 0.9rem;" %>
  </div>
</div>