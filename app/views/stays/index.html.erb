<h1><%= t(".title") %></h1>

<div class="meta" style="margin-bottom:12px;">
  <%= t(".subtitle") %>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= t(".th.id") %></th>
      <th><%= t(".th.pet") %></th>
      <th><%= t(".th.period") %></th>
      <th><%= t(".th.place") %></th>
      <th><%= t(".th.status") %></th>
      <th><%= t(".th.children") %></th>
      <th style="width:220px;"><%= t(".th.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% if @stays.empty? %>
      <tr>
        <td colspan="7" class="meta" style="text-align:center; padding:24px;">
          <%= t(".empty") %>
        </td>
      </tr>
    <% else %>
      <% @stays.each do |stay| %>
        <tr>
          <td class="nowrap">#<%= stay.id %></td>
          <td><%= stay.pet&.name || "-" %></td>
          <td class="nowrap"><%= stay.start_on %> ã€œ <%= stay.end_on %></td>
          <td><%= stay.place %></td>
          <td><%= status_badge(stay) %></td>
          <td><%= stay.children.count %></td>
          <td>
            <div class="stack">
              <%= link_to t(".action.show"), stay_path(stay), class: "btn btn--ghost" %>
              <%= link_to t(".action.checkins"), stay_checkins_path(stay), class: "btn" %>
              <%= link_to t(".action.new_checkin"), new_stay_checkin_path(stay), class: "btn btn--primary" %>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
